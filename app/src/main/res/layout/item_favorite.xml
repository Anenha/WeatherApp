<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/favorite_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/favorite_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_weight="0.1"
            android:checked="false"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="0.4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/favorite_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_text"
                style="@style/AppTheme.TextAppearance.Medium"/>
            <TextView
                android:id="@+id/favorite_item_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/test_text"
                style="@style/AppTheme.TextAppearance.Small"/>
         </LinearLayout>

        <ImageView
            android:id="@+id/favorite_item_image"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/favorite_item_temp_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    style="@style/AppTheme.TextAppearance.Medium"/>
                <TextView
                    android:id="@+id/favorite_item_temp_high_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:layout_weight="1"
                    style="@style/AppTheme.TextAppearance.Small"/>
            </LinearLayout>

            <TextView
                android:id="@+id/favorite_item_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_text"
                android:textAlignment="textEnd"
                style="@style/AppTheme.TextAppearance.Small"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>