<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anenha.weather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_loading"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".widget.WeatherWidgetProvider"
            android:icon="@drawable/ic_launcher"
            android:label="Weather Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info"/>
        </receiver>

        <activity
            android:name=".app.viewController.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.viewController.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".app.viewController.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anenha.weather.app.viewController.HomeActivity" />
        </activity>

        <activity
            android:name=".app.viewController.MoreInformationActivity"
            android:label="@string/action_more"
            android:parentActivityName=".app.viewController.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anenha.weather.app.viewController.HomeActivity" />
        </activity>

        <activity
            android:name=".app.viewController.FavoritesActivity"
            android:label="@string/title_activity_favorites"
            android:parentActivityName=".app.viewController.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anenha.weather.app.viewController.HomeActivity" />
        </activity>

    </application>

</manifest>